<Layout xmlns="urn:speedata.de:2009/publisher/en"
    xmlns:sd="urn:speedata:2009/publisher/functions/en"
    version="2.5.11">
    <Stylesheet>
        area {   border-width: 0.5pt;  }
    </Stylesheet>
    <Pageformat width="60mm" height="45mm" />
    <DefineTextformat name="text" indentation="7pt" rows="-1" alignment="leftaligned"/>


    <SetGrid nx="25" height="12pt"/>

    <Record element="data">
        <PlaceObject column="21" row="1">
            <Box width="5" height="4"/>
            </PlaceObject>
        <Output allocate="auto" row="1">
            <Text>
                <Loop select="3">
                    <Paragraph>
                        <Value>A wonderful serenity has taken possession of my entire soul possession of my entire soul</Value>
                    </Paragraph>
                </Loop>
            </Text>
        </Output>
    </Record>
</Layout>
