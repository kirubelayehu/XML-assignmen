<Layout xmlns="urn:speedata.de:2009/publisher/en"
    xmlns:sd="urn:speedata:2009/publisher/functions/en">

    <SetGrid height="6pt" width="12pt"/>
    <Pageformat width="150mm" height="70mm"/>
    <Options crop="2mm"/>
    <Trace grid="no"/>

    <DefineFontfamily name="text" fontsize="10" leading="12">
        <Regular fontface="TeXGyreHeros-Regular"/>
    </DefineFontfamily>
    <DefineFontfamily name="h1" fontsize="12" leading="14">
        <Regular fontface="TeXGyreHeros-Regular"/>
    </DefineFontfamily>

    <Record element="data">
        <PlaceObject>
            <Box width="4.5" height="6" backgroundcolor="green"/>
        </PlaceObject>
        <PlaceObject column="28" row="5">
            <Box width="4" height="6" backgroundcolor="green"/>
        </PlaceObject>
        <Output row="1" allocate="auto">
            <Text>
                <Paragraph fontface="h1"><Value>Head</Value></Paragraph>
                <Paragraph fontface="text"><Value select="sd:dummytext()"/></Paragraph>
            </Text>
        </Output>
    </Record>
</Layout>