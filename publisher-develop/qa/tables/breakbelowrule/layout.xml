<Layout
  xmlns="urn:speedata.de:2009/publisher/en"
  xmlns:sd="urn:speedata:2009/publisher/functions/en">
  <Pageformat height="5cm" width="7cm"/>

  <Pagetype name="foo" test="true()">
    <Margin left="1cm" right="1cm" top="1cm" bottom="1cm"/>
    <PositioningArea name="tbl">
      <PositioningFrame height="3" width="2" row="1" column="1"/>
      <PositioningFrame height="3" width="2" row="1" column="4"/>
    </PositioningArea>
  </Pagetype>


  <Record element="data">
    <PlaceObject area="tbl">
      <Table>
        <Tr break-below="yes">
          <Td><Paragraph><Value>tablerow</Value></Paragraph></Td>
        </Tr>
        <Tr break-below="yes">
          <Td><Paragraph><Value>tablerow</Value></Paragraph></Td>
        </Tr>
        <Tr break-below="yes">
          <Td><Paragraph><Value>tablerow</Value></Paragraph></Td>
        </Tr>
        <Tablerule rulewidth="12pt" color="green"/>
        <Tr break-below="yes">
          <Td><Paragraph><Value>tablerow</Value></Paragraph></Td>
        </Tr>
        <Tablerule break-below="no" rulewidth="12pt" color="green"/>
        <Tr break-below="no">
          <Td><Paragraph><Value>tablerow</Value></Paragraph></Td>
        </Tr>
        <Tablerule break-below="no" rulewidth="12pt" color="green"/>
        <Tr break-below="no">
          <Td><Paragraph><Value>tablerow</Value></Paragraph></Td>
        </Tr>
      </Table>
    </PlaceObject>

  </Record>


</Layout>

