<Layout xmlns="urn:speedata.de:2009/publisher/en"
  xmlns:sd="urn:speedata:2009/publisher/functions/en">

  <Trace objects="no" grid="no"/>
  <SetGrid nx="10" height="12pt"/>
  <Pageformat width="5cm" height="6cm"/>

  <Record element="data">

    <PlaceObject page="next" column="1">
      <Box width="10" height="2" backgroundcolor="yellow"/>
    </PlaceObject>
    <PlaceObject page="3" column="1">
      <Box width="10" height="3"  backgroundcolor="yellow"/>
    </PlaceObject>
    <PlaceObject column="1">
      <Table stretch="max" >
        <Columns>
          <Column align="left" backgroundcolor="lightgreen" />
          <Column align="center" backgroundcolor="green"/>
          <Column align="right" backgroundcolor="darkgreen"/>
        </Columns>
        <Loop select="20">
          <Tr>
            <Loop select="3">
              <Td><Paragraph><Value>table</Value></Paragraph></Td>
            </Loop>
          </Tr>
        </Loop>
      </Table>
    </PlaceObject>
  </Record>
</Layout>
